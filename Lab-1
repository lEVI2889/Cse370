 alter table Lab_Grades add project_title char(10);

 select name, cgpa, major, days_present/project_marks AS ratio from Lab_Grades;
 select name, cgpa, major, days_present/project_marks ratio from Lab_Grades;

select upper(name), cgpa, lower(major) from Lab_Grades;
 select distinct major from Lab_Grades;

 select upper(name), cgpa, lower(major) from Lab_Grades order by name;
//Ascending
 select upper(name), cgpa, lower(major) from Lab_Grades order by name desc;
//Descending

select upper(name), cgpa, lower(major) from Lab_Grades where cgpa<4 and major = "CSE" order by days_present;

select upper(name), cgpa, lower(major) from Lab_Grades where cgpa<4 and major = "CS";

select upper(name), cgpa, lower(major) from Lab_Grades where project_marks between 17 and 20;
