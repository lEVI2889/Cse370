show databases;

CREATE DATABASE CSE370Lab01_s07;
//query gula cap

use CSE370Lab01_s07;

show tables;

CREATE TABLE Lab_Grades
(
     std_id char(4),
     name varchar(30),
     major char(3),
     section char(1),
     days_present int,
     project_marks double,
     cgpa decimal(3,2),
     submission_date date
);

select * from Lab_Grades;
//* mane all the columns

